<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Student Home</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-br from-black via-purple-950 to-black text-white min-h-screen flex flex-col items-center p-6">

  <!-- Heading + Back button same line -->
  <div class="w-full max-w-5xl flex items-center justify-between mb-6 relative">
    <!-- Back Button (left) -->
    <a href="/student/profile" 
       class="px-3 py-1.5 text-sm bg-gradient-to-r from-purple-800 to-pink-800 rounded-lg font-medium shadow-md hover:from-purple-700 hover:to-pink-600 transition">
      Back to profile
    </a>

    <!-- Center Heading -->
    <h1 class="absolute left-1/2 transform -translate-x-1/2 text-2xl md:text-3xl font-extrabold bg-gradient-to-r from-purple-400 to-pink-500 bg-clip-text text-transparent drop-shadow-lg tracking-wide">
      ðŸ“¢ Bulletins
    </h1>
  </div>

  <!-- Bulletins Grid -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5 w-full max-w-5xl">
    <% files.forEach((val)=>{ %>
      <div class="bg-gray-900/90 rounded-xl shadow-lg border border-purple-700 overflow-hidden hover:scale-105 hover:shadow-purple-600/40 transition transform duration-300">
        
        <!-- Image -->
        <img src="/uploads/<%= val.filename %>" alt="File" 
             class="w-full h-40 object-cover rounded-t-xl">
        
        <!-- Content -->
        <div class="p-4">
          <p class="text-xs text-gray-400 mb-2 italic">Uploaded on <%= uploadTime %></p>
          <a href="/uploads/<%= val.filename %>" 
             class="inline-block px-3 py-1.5 text-sm bg-purple-900 rounded-lg font-medium shadow-md hover:from-purple-700 hover:to-pink-600 transition">
            View File
          </a>
        </div>
      </div>
    <% }) %>
  </div>

</body>
</html>
